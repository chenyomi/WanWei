/**app.wxss**/
text ,view{font-family: "微软雅黑";}
page {height: 100%;background: #e7e7e7;}
.container {height: 100%;display: flex;flex-direction: column;align-items:flex-start;box-sizing: border-box;} 
.show{display: block;background: #fff;}
.hide{ display: none!important}
.space-40{height: 40px; width: 100%;}
/*伸缩盒子*/
.box-row{ width: 100%; display: flex;flex-direction: row;justify-content:space-between;box-sizing: border-box}
.flex-row{width: 100%; display: flex;flex-direction: row;justify-content:space-between;box-sizing: border-box}
.flex-1{flex: 1; box-sizing: border-box}
.flex-2{flex: 2;box-sizing: border-box}
.flex-3{flex: 3;box-sizing: border-box}
.flex-4{flex: 4;box-sizing: border-box}
.flex-5{flex: 5;box-sizing: border-box}
.flex-6{flex: 6;box-sizing: border-box}
.flex-7{flex: 7;box-sizing: border-box}
/*icon*/
.xs-icon{ height: 40rpx; width: 40rpx;vertical-align: middle}
.sm-icon{ height: 60rpx; width: 60rpx;vertical-align: middle}
.md-icon{ height: 80rpx; width: 80rpx;vertical-align: middle}
.bg-icon{ height: 100rpx; width: 100rpx;vertical-align: middle}
.max-icon{ height: 140rpx; width: 140rpx;vertical-align: middle}
/*文本居中*/
.text-center{text-align:center;}
.text-left{text-align:left;}
.text-right{text-align:right;}

/*空隙*/

.space-60{height: 60px; width: 100%}
.space-50{height: 50px; width: 100%}
.space-40{height: 40px; width: 100%}
/*滚动容器*/
.list-scroll{width: 100%;height: 100%;  }

/*加载提示*/
.loading-tip{background:#f0f0f0;width:100%;height:80rpx;line-height:80rpx;text-align:center;color:#878787;font-size:12px; overflow: hidden; border-top: 1rpx solid #f0f0f0}

.loadAnimate{display: flex; position: fixed; width:100%; height: 100%; left: 0; top: 0;background: #fff; z-index: 999;}
.loadAnimate image {animation: route 2s linear infinite}
.fadeOut{animation: fadeOut 2s linear forwards}
.Route{animation: route 2s linear infinite}
.slideToggle{animation: slideToggle 2s linear infinite}
.fadeIn{animation: fadeIn .5s linear forwards}
@keyframes route {
  0%{transform: rotate(0)}
  100%{transform: rotate(-360deg)}
}
@keyframes fadeIn {
  0%{opacity: 0}
  100%{opacity: 1}
}
@keyframes fadeOut {
  0%{opacity: 1}
  60%{opacity: 1}
  100%{opacity: 0}
}
@keyframes slideToggle{
  0%{height: 0px}
  15%{height: 40px}
  85%{height: 40px}
  100%{height: 0px}
}
